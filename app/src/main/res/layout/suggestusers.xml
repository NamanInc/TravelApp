<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"

    android:background="@drawable/adpro"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="180sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_naman"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profiledemo"
        android:layout_gravity="center"


        android:layout_marginTop="1dp"/>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
           android:maxLength="7"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/name_naman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Namanmandliya"


            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#2C2929"/>

        <ImageView
            android:id="@+id/tick_naman"
            android:visibility="visible"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/tick"/>


    </LinearLayout>

    <TextView

        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/followercount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.3K Followers"


        android:layout_gravity="center"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#2C2929"/>

    <androidx.cardview.widget.CardView

        android:layout_gravity="center"
        android:id="@+id/profile_follow_btn"


        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/purple_200"

        android:layout_width="80dp"
        android:layout_marginTop="10dp"

        android:layout_height="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@android:color/white"
                android:visibility="gone" />


            <TextView
                android:id="@+id/profile_follow_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_bold"
                android:text="Follow"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>