<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    app:cardElevation="10dp"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:background="@color/pagecolor"
    android:id="@+id/click"




    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_gravity="center"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/pagecolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">






        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/pagecolor"
            android:layout_width="70dp"
            android:layout_gravity="center"

            app:cardCornerRadius="10dp"
            android:layout_height="75dp">

            <LinearLayout
                android:background="@color/pagecolor"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumb_image"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jai"/>













            </LinearLayout>



        </androidx.cardview.widget.CardView>



        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"

            android:background="@color/pagecolor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">




            <LinearLayout
                android:background="@color/pagecolor"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:maxWidth="180dp"
                    android:id="@+id/nameofplace"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_medium"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaisalmer"
                    android:textColor="#1E1D1D"/>

                <TextView
                    android:id="@+id/stateofplace"

                    android:textSize="11sp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/montserrat"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajasthan"

                    android:textColor="#817C7C"/>

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"

                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="-3dp"


                    android:id="@+id/ratebar"
                    app:mrb_fillBackgroundStars="true"
                    android:progressTint="#FFC107"
                    style="@style/Widget.MaterialRatingBar.RatingBar"

                    android:progressBackgroundTint="@android:color/darker_gray"/>


            </LinearLayout>





            <ImageView
                android:id="@+id/likebtn"


                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/dislike"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>







</LinearLayout>