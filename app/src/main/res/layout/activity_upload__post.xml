<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/pagecolor"
    tools:context=".Upload_Post">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        android:textColor="@color/textcolor"
        android:layout_marginTop="50dp"
        android:textSize="26sp"
        android:fontFamily="@font/lato_bold"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#E55F5F"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"

        android:layout_height="350dp">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/postImage"/>

        <RelativeLayout
            android:id="@+id/hide"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/addplace"
                android:layout_width="50dp"
                android:layout_height="50dp"/>



        </RelativeLayout>











    </androidx.cardview.widget.CardView>


    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





    <LinearLayout


        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/filter1"
            android:src="@drawable/mountainfilter"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_gravity="center"

            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/filter2"
            android:src="@drawable/mountainfilter"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_gravity="center"

            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginRight="10dp"

            android:id="@+id/filter3"
            android:src="@drawable/mountainfilter"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_gravity="center"

            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/filter4"
            android:src="@drawable/mountainfilter"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_gravity="center"

            android:layout_height="80dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/filter5"
            android:src="@drawable/mountainfilter"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_gravity="center"

            android:layout_height="80dp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/filter6"
            android:src="@drawable/mountainfilter"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_gravity="center"

            android:layout_height="80dp"/>











    </LinearLayout>

    </HorizontalScrollView>



    <EditText
        android:visibility="gone"
        android:elevation="1dp"
        android:id="@+id/caption_post"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/searchbc"
        android:padding="15dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textColorHint="#3E3A3A"
        android:layout_marginTop="50dp"
        android:hint="Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <Button
        android:id="@+id/upload_post_btn"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Add"
        android:textColor="@android:color/white"
        android:background="@color/purple_200"/>

    </LinearLayout>

</ScrollView>