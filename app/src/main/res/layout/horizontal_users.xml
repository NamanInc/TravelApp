<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    android:background="@color/pagecolor"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="70dp"
    android:layout_height="110dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_naman"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/profiledemo"
        android:layout_gravity="center"

        android:layout_marginTop="20dp"/>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_naman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naman"
            android:layout_gravity="center"
            android:fontFamily="@font/lato"
            android:textColor="@color/textcolor"/>

        <ImageView
            android:id="@+id/tick_naman"
            android:visibility="visible"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/tick"/>


    </LinearLayout>



</LinearLayout>