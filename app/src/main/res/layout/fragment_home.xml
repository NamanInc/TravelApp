<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pagecolor"
    android:orientation="vertical"
    tools:context="com.Fragments.HomeFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content">













    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:visibility="visible"

        android:id="@+id/mainlayuhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/rel1"

        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/darkmodebtn"
            android:tint="@color/textcolor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/modedark"
            android:layout_toLeftOf="@+id/profileimage_home"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimage_home"
            android:elevation="10dp"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/profiledemo"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"/>

        <androidx.cardview.widget.CardView

            android:id="@+id/plus_card"
            app:cardCornerRadius="10dp"
            android:layout_width="45dp"
            android:layout_centerVertical="true"
            app:cardElevation="10dp"
            android:backgroundTint="@color/purple_200"
            android:layout_marginLeft="30dp"
            android:layout_height="45dp">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/addplace"
                android:layout_gravity="center"/>


        </androidx.cardview.widget.CardView>







    </RelativeLayout>



    <TextView

        android:layout_below="@+id/rel1"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Namaste , Naman !"
        android:id="@+id/name_namaste"
        android:textColor="@color/purple_200"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/lato_bold"/>

    <TextView
        android:layout_below="@+id/name_namaste"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Where would you like to go?"
        android:textColor="@color/textcolor"
        android:textSize="30sp"
        android:id="@+id/where"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/poppins_medium"/>

    <LinearLayout
        android:id="@+id/l23"
        android:layout_below="@+id/where"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_marginTop="10dp">












        <EditText
            android:textColor="#3A3737"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="80dp"

            android:layout_width="match_parent"
            android:hint="Find your Location"
            android:padding="17dp"
            android:fontFamily="@font/montserrat"
            android:textSize="13sp"
            android:textColorHint="@color/textcolor"
            android:layout_height="wrap_content"
            android:background="@drawable/searchbc"
            />

        <ImageView
            android:layout_marginLeft="-65dp"
            android:layout_marginRight="0dp"
            android:layout_width="50dp"
            android:elevation="10dp"
            android:layout_height="50dp"
            android:src="@drawable/kk1"
            android:padding="15dp"
            android:background="@drawable/searchbtn"
            android:layout_gravity="center"/>








    </LinearLayout>





        <HorizontalScrollView
            android:id="@+id/hori"
            android:layout_below="@+id/l23"


            android:layout_marginLeft="15dp"

            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <LinearLayout
                    android:layout_marginTop="-20dp"

                    android:layout_centerInParent="true"





                    android:layout_width="match_parent"


                    android:orientation="horizontal"
                    android:layout_height="150dp">




                    <androidx.cardview.widget.CardView
                        android:id="@+id/camping_cat"
                        android:layout_gravity="center"
                        app:cardElevation="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/baground"
                        app:cardCornerRadius="10dp"
                        android:layout_width="100dp"

                        android:layout_height="120dp">


                        <LinearLayout

                            android:orientation="vertical"

                            android:layout_gravity="center"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:src="@drawable/campicon"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Camping"
                                android:layout_gravity="center"

                                android:fontFamily="@font/montserrat"
                                android:textSize="12sp"
                                android:textColor="@color/textcolor"/>




                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hicking_cat"
                        android:layout_gravity="center"
                        app:cardElevation="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="12dp"
                        android:backgroundTint="@color/baground"
                        app:cardCornerRadius="10dp"
                        android:layout_width="100dp"

                        android:layout_height="120dp">


                        <LinearLayout

                            android:orientation="vertical"

                            android:layout_gravity="center"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:src="@drawable/hike1"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hiking"
                                android:layout_gravity="center"

                                android:fontFamily="@font/montserrat"
                                android:textSize="12sp"
                                android:textColor="@color/textcolor"/>




                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/rafting_cat"
                        android:layout_gravity="center"
                        app:cardElevation="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="12dp"
                        android:backgroundTint="@color/baground"
                        app:cardCornerRadius="10dp"
                        android:layout_width="100dp"

                        android:layout_height="120dp">


                        <LinearLayout

                            android:orientation="vertical"

                            android:layout_gravity="center"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:src="@drawable/rafting2"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rafting"
                                android:layout_gravity="center"

                                android:fontFamily="@font/montserrat"
                                android:textSize="12sp"
                                android:textColor="@color/textcolor"/>




                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/temples_cat"
                        android:layout_gravity="center"
                        app:cardElevation="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="12dp"
                        android:backgroundTint="@color/baground"
                        app:cardCornerRadius="10dp"
                        android:layout_width="100dp"

                        android:layout_height="120dp">


                        <LinearLayout

                            android:orientation="vertical"

                            android:layout_gravity="center"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center"
                                android:layout_height="50dp"
                                android:src="@drawable/tempole"/>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temples"
                                android:layout_gravity="center"

                                android:fontFamily="@font/montserrat"
                                android:textSize="12sp"
                                android:textColor="@color/textcolor"/>




                        </LinearLayout>


                    </androidx.cardview.widget.CardView>






                </LinearLayout>

            </RelativeLayout>










        </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/nihori"
        android:layout_below="@+id/hori"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"

        android:layout_height="wrap_content">




        <TextView
            android:drawableRight="@drawable/next"
            android:drawableTint="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Popular"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"

            android:id="@+id/postrecyclerview"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <HorizontalScrollView
            android:layout_marginRight="10dp"
            android:scrollbars="none"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="0dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/homeImage1"
                        android:layout_width="280dp"
                        android:src="@drawable/xxxx"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>



                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/homeImage2"
                        android:layout_width="280dp"
                        android:src="@drawable/gggg"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>



                </androidx.cardview.widget.CardView>





            </LinearLayout>




        </HorizontalScrollView>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="158dp">

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/weathertype"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo_paaji"

                    android:text="ThunderStorm"
                    android:textColor="@color/hintcolor"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/temperaturetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/baloo_paaji"

                    android:text="10"
                    android:layout_marginTop="-15dp"
                    android:textColor="@color/purple_200"
                    android:textSize="15sp" />

                <LinearLayout

                    android:orientation="horizontal"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="start"
                        android:layout_width="15dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/markerred"

                        android:layout_height="wrap_content"/>










                <TextView
                    android:id="@+id/gavname"


                    android:drawablePadding="1dp"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"

                    android:text="Garoth"

                    android:textColor="@color/hintcolor"
                    android:textSize="14sp" />

                </LinearLayout>



            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/type_weather_anim"
                android:layout_width="80dp"
                android:layout_height="80dp"
              app:lottie_fileName="thunder.json"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>




        </RelativeLayout>

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best For Hicking"
            android:drawableRight="@drawable/next"
            android:drawableTint="@color/textcolor"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"

            android:id="@+id/hicking_best"
            android:layout_marginBottom="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creators"
            android:drawableRight="@drawable/next"
            android:drawableTint="@color/textcolor"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/poppins_medium"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerviewHome_users"/>

        <TextView
            android:drawableRight="@drawable/next"
            android:drawableTint="@color/textcolor"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temples"
            android:layout_marginTop="20dp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"

            android:id="@+id/temple_best"
            android:layout_marginBottom="15dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>









    </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/nihori"

            android:background="@color/baground"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AD"
                    android:textSize="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@color/purple_200"/>





                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:drawableRight="@drawable/next"
                    android:drawableTint="@color/textcolor"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggested Products"

                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"/>

            </LinearLayout>






            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"

                android:id="@+id/recyclerviewproductshome"
                android:layout_marginBottom="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <HorizontalScrollView
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:scrollbars="none"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="0dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:id="@+id/homeImage3"
                            android:layout_width="280dp"
                            android:src="@drawable/xxxx"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"/>



                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:id="@+id/homeImage4"
                            android:layout_width="280dp"
                            android:src="@drawable/gggg"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"/>



                    </androidx.cardview.widget.CardView>





                </LinearLayout>




            </HorizontalScrollView>


        </LinearLayout>


    </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:visibility="gone"

            android:id="@+id/loadhome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"

            app:lottie_fileName="loadhome.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </RelativeLayout>







    </ScrollView>









