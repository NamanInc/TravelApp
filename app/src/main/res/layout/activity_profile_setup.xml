<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FAF8F8"
    android:layout_height="match_parent"
    tools:context="com.meghlaxshapplications.ProfileSetup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout

        android:layout_width="105dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_height="105dp">







    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"

        android:layout_width="96dp"
        android:layout_height="96dp"

        android:src="@drawable/profiledemo"/>



        <ImageView
            android:id="@+id/plus"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>



    <TextView
        android:textColor="#2B2626"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey , Just a Last Step"
        android:textSize="28sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/edit_name"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"

            android:textColor="#1B1717"
            android:padding="15dp"
            android:textColorHint="#534E4E"
            android:background="@drawable/edittextbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"/>

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/edit_email"
            android:fontFamily="@font/montserrat"

            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="#1B1717"
            android:padding="15dp"
            android:textColorHint="#534E4E"
            android:background="@drawable/edittextbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@drawable/flag"
                android:layout_height="30dp"/>

            <TextView
                android:textColor="#322D2D"
                android:textSize="17sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"/>


        <EditText
            android:id="@+id/edit_phone"
            android:inputType="number"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"


            android:textColor="#1B1717"
            android:padding="15dp"
            android:textColorHint="#534E4E"
            android:background="@drawable/edittextbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone No"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edit_city"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"

            android:layout_marginTop="20dp"
            android:textColor="#1B1717"
            android:padding="15dp"
            android:textColorHint="#534E4E"
            android:background="@drawable/edittextbc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City /  Town / Village"/>


        <Button
            android:id="@+id/nextbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="30dp"
            android:text="Next"
            android:textColor="@android:color/white"/>


        <TextView
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#4E4B4B"
            android:layout_height="wrap_content"
            android:text="All your information are safely stored in our database. We ask this data to give you good suggestion and for verifying you."
            android:textAlignment="center"/>



    </LinearLayout>

    </LinearLayout>

</ScrollView>